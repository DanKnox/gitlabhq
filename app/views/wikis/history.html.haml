%h3.page_title
  %span.cgray History for
  = @wiki.title
%br
%table
  %thead
    %tr
      %th Page version
      %th Last updated
      %th Updated by
  %tbody
    - @wiki_versions.each_with_index do |version, i|
      %tr
        %td
          %strong
            = link_to "/#{@project.path_with_namespace}/wikis/#{@wiki.slug}?version_id=#{version.sha}" do
              Version
              = @wiki_versions.count - i
        %td
          = version.date.to_s(:short)
          (#{time_ago_in_words(version.date)}
          ago)
        %td= version.author.email
        -# link_to_member(@project, version.author.email)
